<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordMasterApp.Components.ValidationWrapper"
             x:Name="Root">

    <ContentView.Resources></ContentView.Resources>

    <Border Stroke="{AppThemeBinding Light={StaticResource ErrorLight}, Dark={StaticResource ErrorDark}}"
            StrokeThickness="0"
            Padding="0"
            StrokeShape="RoundRectangle 8">
        <Border.Triggers>
            <DataTrigger TargetType="Border" Binding="{Binding IsFrameVisible, Source={x:Reference Root}}" Value="True">
                <Setter Property="StrokeThickness" Value="2" />
                <Setter Property="Padding" Value="10" />
            </DataTrigger>
        </Border.Triggers>

        <Grid RowDefinitions="Auto,Auto"
              Margin="0"
              RowSpacing="0">
            <Grid Grid.Row="0">
                <ContentView Content="{Binding InnerContent, Source={x:Reference Root}}" />

                <Button IsVisible="{Binding IsButtonVisible, Source={x:Reference Root}}"
                        Clicked="Button_Clicked"
                        WidthRequest="24"
                        HeightRequest="24"
                        CornerRadius="12"
                        Margin="0,0,5,0"
                        Padding="3"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Background="Transparent"
                        BorderColor="{AppThemeBinding Light={StaticResource ErrorLight}, Dark={StaticResource ErrorDark}}"
                        BorderWidth="2">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FontAwesomeSolid"
                                         Glyph="&#x3f;"
                                         Color="{AppThemeBinding Light={StaticResource ErrorLight}, Dark={StaticResource ErrorDark}}"
                                         Size="14" />
                    </Button.ImageSource>
                </Button>
            </Grid>

            <!-- Error Message -->
            <Label Grid.Row="1"
                   Text="{Binding ValidationMessage, Source={x:Reference Root}}"
                   TextColor="{AppThemeBinding Light={StaticResource ErrorLight}, Dark={StaticResource ErrorDark}}"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"
                   IsVisible="Hidden">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding IsFrameVisible, Source={x:Reference Root}}" Value="True">
                        <Setter Property="IsVisible" Value="Visible" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>
        </Grid>
    </Border>
</ContentView>
